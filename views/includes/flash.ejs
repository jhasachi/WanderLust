<style>
  .alert {
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    font-size: 0.9rem;
  }
</style>

<% if(success && success.length){ %>
  <div class="alert alert-success alert-dismissible fade show col-md-6 offset-md-3 mt-3" role="alert">
    <%= success %>
    <button 
      type="button" 
      class="btn-close" 
      data-bs-dismiss="alert" 
      aria-label="Close"
    ></button>
  </div>
<% } %>

<% if(error && error.length){ %>
  <div class="alert alert-danger alert-dismissible fade show col-md-6 offset-md-3 mt-3" role="alert">
    <%= error %>
    <button 
      type="button" 
      class="btn-close" 
      data-bs-dismiss="alert" 
      aria-label="Close"
    ></button>
  </div>
<% } %>
