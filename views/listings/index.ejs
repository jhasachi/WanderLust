<% layout("/layouts/boilerplate") %>

<style>
  body {
    background-color: #121212; /* Dark background */
    color: #f0f0f0; /* Light text for contrast */
  }
  .listing-card {
    background: #1e1e1e;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0,0,0,0.4);
    overflow: hidden;
    margin-bottom: 2rem;
    padding: 1.5rem; /* More padding */
    transition: transform 0.3s ease;
  }
  .listing-card:hover {
    transform: scale(1.03);
  }
  .listing-card img {
    border-radius: 0.5rem;
    width: 100%;
    object-fit: cover;
  }
  .listing-card .card-body {
    margin-top: 1rem;
  }
  .listing-card h5 {
    color: #ffffff;
  }
  .listing-card p {
    color: #cccccc;
  }
  .total-after-taxes {
    background: #333;
    color: #28a745;
    font-weight: bold;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    margin-top: 1rem;
  }
  @media (max-width: 768px) {
    .listing-card {
      padding: 1rem;
    }
  }
</style>

<div class="container mt-4">
  <div class="row">
    <% listings.forEach(listing => { %>
      <div class="col-md-6 col-lg-4 col-12">
        <div class="listing-card">
          <img src="<%= listing.image %>" alt="<%= listing.title %>" />
          <div class="card-body">
            <h5><%= listing.title %></h5>
            <p><%= listing.description.substring(0, 100) %>...</p>
            <div class="total-after-taxes">
              Total after taxes: $<%= listing.totalAfterTaxes %>
            </div>
            <a href="/listings/<%= listing._id %>" class="btn btn-success mt-2">View Listing</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
