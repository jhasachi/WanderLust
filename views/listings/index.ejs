<% layout("/layouts/boilerplate") %>

<div id="filters" class="filter-tray mt-3 mx-auto">
  <div class="filter-chip">
    <i class="fa-solid fa-fire"></i>
    <span>Trending</span>
  </div>
  <div class="filter-chip">
    <i class="fa-solid fa-bed"></i>
    <span>Rooms</span>
  </div>
  <div class="filter-chip">
    <i class="fa-solid fa-tree-city"></i>
    <span>Treehouse</span>
  </div>
  <div class="filter-chip">
    <i class="fa-solid fa-mountain-city"></i>
    <span>Mountain</span>
  </div>
  <div class="filter-chip">
    <i class="fa-solid fa-caravan"></i>
    <span>Campers</span>
  </div>
  <div class="filter-chip">
    <i class="fa-solid fa-campground"></i>
    <span>Camping</span>
  </div>
  <div class="filter-chip">
    <i class="fa-solid fa-sailboat"></i>
    <span>Boats</span>
  </div>
  <div class="filter-chip">
    <i class="fa-solid fa-city"></i>
    <span>City</span>
  </div>
</div>

<div class="listing-grid mt-4">
  <div class="row row-cols-xl-4 row-cols-lg-4 row-cols-md-2 row-cols-1 g-4">
    <% for(let listing of allListings) { %>
    <div class="col d-flex">
      <a href="/listings/<%= listing._id %>" class="listing-link flex-grow-1">
        <div class="card listing-card h-100">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing_image"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text mb-1">
              <b><%= listing.title %></b>
            </p>
            <p class="card-text text-muted mb-0">
              <%= listing.price %> CZ / night
              <br /><i class="tax-info">18% GST</i>
            </p>
          </div>
        </div>
      </a>
    </div>
    <% } %>
  </div>
</div>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (taxSwitch.checked) {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
