<% layout("/layouts/boilerplate") %>

<div class="row mb-3 mt-3">
    <div class="col-8 offset-2">
    <br/>
    <h2>Wrap up your details</h2>
    <br/>
    <form 
        method="POST" 
        action="/listings" 
        novalidate 
        class="needs-validation" 
        enctype="multipart/form-data"
    >
        <div class="mb-3">
            <label for="title" class="form-label"><h5>Title</h5></label>
            <input 
                name="listing[title]" 
                placeholder="Add Title.." 
                type="text" 
                class="form-control"
                required
            />
            <div class="valid-feedback"> Correct </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label"><h5>Description</h5></label>
            <textarea 
                name="listing[description]" 
                class="form-control"
                required
            ></textarea>
            <div class="invalid-feedback"> Please enter a short description. </div>
            <div class="valid-feedback"> Correct </div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label"><h5>Upload Image</h5></label>
            <input 
                name="listing[image]"  
                type="file"
                class="form-control"
            />
            required
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label"><h5>Price</h5></label>
                <input 
                    name="listing[price]" 
                    placeholder="450" 
                    class="form-control"
                    required
                />
                <div class="invalid-feedback"> Please enter a valid price. </div>
                <div class="valid-feedback"> Correct </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label"><h5>Location</h5></label>
                <input 
                    name="listing[location]" 
                    placeholder="Prague" 
                    type="text"
                    class="form-control"
                    required
                />
                <div class="invalid-feedback"> Please enter a valid location. </div>
                <div class="valid-feedback"> Correct </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label"><h5>Country</h5></label>
            <input 
                name="listing[country]" 
                placeholder="Czech Republic" 
                type="text"
                class="form-control"
                required
            />
            <div class="invalid-feedback"> Please enter a valid country. </div>
            <div class="valid-feedback"> Correct </div>
        </div>
        <button class="btn btn-dark add-btn mt-3 mb-3">Create</button>
    </form>
    </div>
</div>



