<% layout("/layouts/boilerplate") %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
  console.log(listing);
</script>

<div class="show-shell mt-3 mb-5">
  <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-4">
    <div>
      <p class="text-muted mb-1">Stay</p>
      <h2 class="mb-0"><%= listing.title %></h2>
    </div>
  </div>

  <div class="row g-4 show-grid">
    <div class="col-lg-7">
      <div class="card listing-card show-card h-100">
        <img 
          src="<%= listing.image.url %>"
          class="card-img-top show-img" 
          alt="listing_image"
        />
        <div class="card-body">
          <p class="card-text mb-2"><b>Owner</b> : @<%= listing.owner.username %></p>
          <p class="card-text mb-2"><%= listing.description %></p>
          <p class="card-text mb-2"><b>Location</b> : <%= listing.location %></p>
          <p class="card-text mb-0"><b>Country</b> : <%= listing.country %></p>
        </div>
      </div>
    </div>
    <div class="col-lg-5 d-flex flex-column gap-3">
      <div class="card show-meta h-100">
        <div class="card-body">
          <div class="d-flex align-items-center justify-content-between mb-3">
            <div>
              <p class="mb-1 text-muted">Price</p>
              <h4 class="mb-0"><%= listing.price %> CZ</h4>
            </div>
            <div class="text-end">
              <p class="mb-1 text-muted">Address</p>
              <b><%= listing.location %>, <%= listing.country %></b>
            </div>
          </div>
          <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
          <div class="show-actions">
            <a 
              href="/listings/<%= listing._id %>/edit" 
              class="pill-btn accent text-decoration-none">
              Edit listing
            </a>
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
              <button class="pill-btn" type="submit">Delete</button>
            </form>
          </div>
          <% } %>
          <div class="show-map card mt-3">
            <div id="map"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="show-reviews mt-4">
    <% if(currUser) { %> 
    <div class="card review-form mb-4">
      <div class="card-body">
        <h4 class="mb-3">Write a review</h4>
        <form action="/listings/<%= listing.id %>/reviews" 
          method="POST" 
          novalidate 
          class="needs-validation"
        >
          <div class="mt-3">
            <label for="Rating" class="form-label mb-3 mt-2">Rating</label>
            <fieldset class="starability-slot">
              <input 
                type="radio" 
                id="no-rate" 
                class="input-no-rate" 
                name="review[rating]" 
                value="1" 
                checked 
                aria-label="No rating." 
              />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>      
          </div>
          <div class="mb-3">
            <label for="Comment" class="form-label mb-3">Tell us more about your experience</label>
            <textarea 
              name="review[comment]" 
              id="comment" 
              cols="8" 
              rows="5"
              class="form-control"
              required
            ></textarea>
            <div class="invalid-feedback">
              Please add comments for review.
            </div>
          </div>
          <button class="pill-btn accent" type="submit">Submit</button>
        </form>
      </div>
    </div>
    <% } %>

    <% if(listing.review.length > 0) { %>
    <div class="mb-3 d-flex align-items-center gap-2">
      <h4 class="mb-0">All Reviews</h4>
      <span class="badge bg-warning text-dark"><%= listing.review.length %></span>
    </div>
    <div class="row g-3">
      <% for(review of listing.review) { %>
        <div class="col-md-6 col-lg-4">
          <div class="card review-card h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <h6 class="mb-0">@<%=review.author.username%></h6>
                <p class="starability-result mb-0" data-rating="<%=review.rating%>"></p>
              </div>
              <p class="card-text mb-3"><%=review.comment%></p>
              <form 
                class="mb-0" 
                method="POST" 
                action="/listings/<%= listing._id%>/reviews/<%= review._id%>?_method=DELETE"
              >
                <button class="pill-btn" type="submit">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% } %>
    </div>
    <% } %>
  </div>
</div>

<script src="/js/map.js"></script>
