<% layout("/layouts/boilerplate") %>

<style>
  .show-card {
    background: #fff;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    padding: 1rem;
  }
  .show-card img {
    border-radius: 0.5rem;
    width: 100%;
  }
  .edit-btn, .delete-btn, .review-btn {
    border-radius: 0.5rem;
    transition: background-color 0.3s;
  }
  .edit-btn:hover {
    background-color: #0056b3;
  }
  .delete-btn:hover {
    background-color: #c82333;
  }
  .review-btn:hover {
    background-color: #218838;
  }
  #map {
    height: 300px;
    border-radius: 0.5rem;
  }
</style>

<div class="container mt-4">
  <h2 class="text-center"><%= listing.title %></h2>

  <div class="card show-card mt-3">
    <img src="<%= listing.image.url %>" alt="listing_image" class="mb-3" />
    <div class="card-body">
      <p><b>Owner:</b> <%= listing.owner.username %></p>
      <p><%= listing.description %></p>
      <p><b>Location:</b> <%= listing.location %></p>
      <p><b>Price:</b> <%= listing.price %> Cz</p>
    </div>
  </div>

  <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
  <div class="d-flex justify-content-between mt-3">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-danger delete-btn">Delete</button>
    </form>
  </div>
  <% } %>

  <% if(currUser) { %>
  <div class="mt-5">
    <h4>Write a Review</h4>
    <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate>
      <div class="mb-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <!-- Starability radio buttons here -->
        </fieldset>
      </div>
      <div class="mb-3">
        <label for="comment" class="form-label">Your Review</label>
        <textarea name="review[comment]" class="form-control" rows="4" required></textarea>
      </div>
      <button class="btn btn-success review-btn">Submit Review</button>
    </form>
  </div>
  <% } %>

  <% if(listing.review.length > 0) { %>
  <div class="mt-5">
    <h4>All Reviews</h4>
    <% listing.review.forEach(review => { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">@<%= review.author.username %></h5>
        <p class="starability-result" data-rating="<%= review.rating %>"></p>
        <p class="card-text"><%= review.comment %></p>
        <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
    </div>
    <% }); %>
  </div>
  <% } %>

  <div class="mt-5">
    <h4>Where will you be</h4>
    <div id="map" class="mt-3"></div>
  </div>
</div>

<script src="/js/map.js"></script>
