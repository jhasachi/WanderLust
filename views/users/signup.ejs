<% layout("/layouts/boilerplate") %>

<br>
<div class="row mb-3">
    <h1 class="col-6 offset-3">Sign Up</h1>
    <div class="col-6 offset-3">
        <br>
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label"><h5>Username</h5></label>
                <input 
                    name="username" 
                    id="username"
                    type="text" 
                    class="form-control"
                    required
                />
            </div>

            <div class="mb-3">
                <label for="email" class="form-label"><h5>Email</h5></label>
                <input 
                    name="email" 
                    id="email"
                    type="email" 
                    class="form-control"
                    required
                />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label"><h5>Password</h5></label>
                <input 
                    name="password" 
                    id="password"
                    type="password" 
                    class="form-control"
                    required
                />
            </div>
            <button type="submit" class="btn btn-success">Sign Up</button>
        </form>
    </div>
</div>